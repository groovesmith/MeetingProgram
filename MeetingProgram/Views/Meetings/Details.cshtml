@using MeetingProgram.Models.MeetingModel;
@model MeetingProgram.Models.MeetingModel.Meeting

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Agenda)
        </dt>

        <dd>
            <ol>
                @foreach (Topic topic in Model.Agenda.Topics)
                {
                    Html.RenderPartial("TopicViewer", topic);
                }
            </ol>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MeetingID }) |
    @Html.ActionLink("Back to Meetings", "Index")
</p>
